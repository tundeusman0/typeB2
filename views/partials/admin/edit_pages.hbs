{{> admin/head_nav}}
<h2>Edit Page</h2>
<a href="/admin/pages">Back to all pages</a>

<br>
<form method="POST" action="/admin/pages/edit-page/{{slug}}">
    <div>
        <label for="">Title</label>
        <input type="text" name="title" value="{{title}}" placeholder="title" />
    </div>
    <div>
        <label for="">slug</label>
        <input type="hidden" name="slug" value="" placeholder="slug" />
    </div>
    <div>
        <label for="">Content</label>
        <textarea name="content" id="" cols="30" rows="10" placeholder="content">{{content}}</textarea>
    </div>
    <input type="hidden" name="id" id="" value="{{id}}" />
    <button>Submit</button>
</form>
{{> admin/footer}}