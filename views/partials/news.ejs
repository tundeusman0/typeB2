<div class="media-container">
    <div class="media-left">
    <h2>Read the School news</h2>
    <p>This are the news we have for you</p><br>
            <div class="media">
            <% news.forEach(function(img,index){ %>
                <% if(index === 0 ){ %>
                <div class="media-first">
                    <img src="/images/newsImages/<%= news[0]._id %>/<%= news[0].image %>" class="media-object" style="width:45px">
                </div>
                <div class="media-body">
                    <h2 class="media-heading"><%= news[0].title %> <small><i><%= news[0].created %></i></small></h2>
                    <a href="/news/<%= news[0].slug %>" target="_blank">                    
                    <p><%= news[0].content %></p>
                    </a>
                        <% }else if(index > 0 && index < 4 ){ %>
                        <div class="media-rest">
                                <div>
                                    <img src="/images/newsImages/<%= img._id %>/<%= img.image %>" class="media-object" style="width:45px">
                                </div>
                                <div class="media-body">
                                    <h3 class="media-heading"><%= img.title %> <small><i><%= img.created %></i></small></h3>
                                    <a href="/news/<%= img.slug %>" target="_blank">                    
                                    <p><%= img.content %></p>
                                    </a>
                                </div>
                        </div>
                        <% } %>
        <% }); %>

            </div>
    
    </div>
    </div>
        <div class="media-right">

            <h1><a href="/news" target="_blank">Read All news</a></h1>
        </div>
</div> 

    