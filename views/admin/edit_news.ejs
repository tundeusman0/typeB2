<%- include('../layout/admin_header.ejs') %>

<h2>Edit New Page</h2>
<div class="back-to-pages">
<a href="/admin/news"><i class="fas fa-arrow-left"></i> Back to all News Pages</a>
</div>

<br>
<br>
<form method="POST" action="/admin/news/edit-news/<%= slug %>" enctype="multipart/form-data">
    <div>
        <label for="">Title</label>
        <input type="text" name="title" value="<%= title %>" placeholder="title" />
    </div>
    <div>
        <label for="">slug</label>
        <input type="text" name="slug" value="<%= slug %>" placeholder="slug" />
    </div>
    <div>
        <label for="">content</label>
        <textarea name="content" id="editor" cols="30" rows="10" placeholder="content"><%- content %></textarea>
    </div>
    <div>
        <label for="">image</label>
        <input id="input" type="file" name="image" placeholder="image" onchange="showMyImage(this)"/>

        <img id="output" src="/images/newsImages/<%= id %>/<%= image %>" alt="">
    </div>

    <input type="hidden" name="Nimage" id="" value="<%= image %>" />
    <input type="hidden" name="id" id="" value="<%= id %>" />
    <button>Submit</button>
</form>

<%- include('../layout/footer.ejs') %>
