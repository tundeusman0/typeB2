<%- include('../layout/header.ejs') %>

<div class="back-to-pages">
<a href="/admin"><i class="fas fa-arrow-left"></i> Back to Admin</a>
</div>

<form method="POST" action="/admin/register-staff" enctype="multipart/form-data">
    <div>
        <label for="">Email</label>
        <input type="text" name="email" placeholder="email@email.com" />
    </div>
    <div>
        <label for="">ID Number</label>
        <input type="text" name="number" placeholder="id number" />
    </div>
    <div>
        <label for="">Appointment</label>
        <input type="text" name="appointment" placeholder="appointment" />
    </div>
    <div>
        <label for="">Designation</label>
        <select name="designation">
            <option value="lecturer">Lecturer</option>
            <option value="non-lecturing staff">non-lecturing staff</option>
        </select>
        
    </div>
    
    <div>
    <label>Faculty</label>
    <% let message= [] %>
        <select name="faculty" id="faculty">
        <option value="" selected disabled>Select Faculty</option>
        <% if(faculties){ %>
        <% faculties.forEach(faculty=>{ %>
            <option value="<%= faculty.faculty %>"><%= faculty.faculty %></option>
            <% })%>
            <% }%>
        </select>
    </div>
    <div>
        <label for="">Department</label>
        <select name="department" id="department">
            <option value="" selected disabled>Select Department</option>
        <% if(faculties){ %>
            
            <% for(let faculty of faculties){ %>
            <option value="" disabled><%= faculty.faculty %></option>
            <% faculty.department.forEach(department => { %>
                    <option value="<%= department %>"><%= department %></option>
                    <% }) %>
        <% }%>
        <% }%>
        </select>
    </div>
    
